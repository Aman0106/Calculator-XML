<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:backgroundTint">@color/greyLight</item>
    </style>
    <style name="buttonOperation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:backgroundTint">@color/greyLight</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... other theme attributes ... -->
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>